    key_length = len(key)
    encrypted = bytes([m[i] ^ key[i % key_length] for i in range(len(m))])
    return encrypted

#1.6
def hamming_dist(a: bytes, b: bytes) -> int:
    if len(a) != len(b):
        raise ValueError("Byte strings must be of equal length.")
    
    distance = 0
    for byte1, byte2 in zip(a, b):
        diff = byte1 ^ byte2
        distance += bin(diff).count('1')
    
    return distance
